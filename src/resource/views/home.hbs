<div class="mt-4">
  <div class="row">
    <div class="row sm-6 lg-4">
        {{#each courses}}
      <div class="card card-items" style="width: 18rem;">
        <a href="/courses/{{this.slug}}">
         <img src={{this.image}} class="card-img-top" alt="..." />
        </a>
        <div class="card-body">
          <a href="/course/{{this.slug}}">
           <h5 class="card-title">{{this.name}}</h5>
          </a>
          <p class="card-text">{{this.des}}</p>
          <p class="cost-text">Cost: {{this.cost}}</p>
          <a href="#" class="btn btn-primary">Buy</a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>