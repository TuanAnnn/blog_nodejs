<div class="mt-4">
  <div class="row">
    <div class="col-sm-6 col-lg-2">
        {{#each courses}}
      <div class="card">
        <img src={{this.image}} class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.des}}</p>
          <a href="#" class="btn btn-primary">Buy</a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>